[Unit]
Description=Stealth Overlay Service
After=graphical-session.target

[Service]
Type=simple
Environment=DISPLAY=:0
Environment=XAUTHORITY=%h/.Xauthority
Environment=LD_PRELOAD=%h/.local/lib/libstealth_hook.so
ExecStart=%h/.local/bin/stealth-overlay %h/.config/stealth-overlay/overlay.yml
Restart=always
RestartSec=5
PrivateTmp=false

[Install]
WantedBy=default.target
